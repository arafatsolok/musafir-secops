# MUSAFIR Agent Configuration

# Controller Configuration
CONTROLLER_URL=http://localhost:8080

# Agent Authentication (set after enrollment)
AGENT_ID=
AGENT_HMAC=

# Legacy Gateway Configuration (for backward compatibility)
GATEWAY_URL=http://localhost:8080
AGENT_HMAC_SECRET=default-hmac-secret-for-demo

# TLS Configuration (optional)
TLS_CERT_FILE=
TLS_KEY_FILE=
TLS_CA_FILE=

# Agent Configuration
AGENT_NAME=MUSAFIR-Agent
AGENT_VERSION=2.0.0
HEARTBEAT_INTERVAL=30s

# Monitoring Configuration
ENABLE_PROCESS_MONITORING=true
ENABLE_FILE_MONITORING=true
ENABLE_NETWORK_MONITORING=true
ENABLE_REGISTRY_MONITORING=true
ENABLE_SYSLOG_MONITORING=true
ENABLE_SNMP_MONITORING=true

# Network Monitoring
NETWORK_INTERFACE=
SNMP_COMMUNITY=public
SYSLOG_PORT=514

# File Monitoring Paths
MONITOR_PATHS=C:\Windows\System32,C:\Program Files,C:\Users

# Process Monitoring
MONITOR_PROCESS_CREATION=true
MONITOR_PROCESS_TERMINATION=true
MONITOR_PROCESS_INJECTION=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=musafir_agent.log

# Performance Configuration
MAX_EVENTS_PER_SECOND=1000
QUEUE_SIZE=10000
BATCH_SIZE=100