# MUSAFIR Controller Configuration

# Server Configuration
PORT=8080
HOST=0.0.0.0

# Database Configuration
CLICKHOUSE_DSN=tcp://localhost:9000?database=default
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=musafir

# Security Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
HMAC_SECRET=your-hmac-secret-key-change-in-production
AGENT_HMAC_SECRET=your-agent-hmac-secret-key-change-in-production

# TLS Configuration (optional)
TLS_ENABLED=false
TLS_CERT_FILE=
TLS_KEY_FILE=

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=controller.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000

# Agent Configuration
MAX_AGENTS=1000
AGENT_TIMEOUT_SECONDS=300
HEARTBEAT_INTERVAL_SECONDS=60

# WebSocket Configuration
WS_ENABLED=true
WS_MAX_CONNECTIONS=100
WS_PING_INTERVAL_SECONDS=30

# Development Mode
DEV_MODE=true
DEBUG_ENABLED=true

# Performance Configuration
MAX_EVENTS_PER_SECOND=10000
QUEUE_SIZE=100000
WORKER_THREADS=10

# Metrics Configuration
METRICS_ENABLED=true
METRICS_INTERVAL_SECONDS=60

# Alert Configuration
ALERTS_ENABLED=true
ALERT_WEBHOOK_URL=

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30